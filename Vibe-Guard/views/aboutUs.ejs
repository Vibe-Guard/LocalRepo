    <script>
  document.addEventListener("DOMContentLoaded", () => {
    const counters = document.querySelectorAll(".counter");
    let hasAnimated = false;

    // Function to animate counters
    const animateCounter = (counter) => {
      const target = +counter.getAttribute('data-count');
      let current = 0;
      const increment = Math.ceil(target / 100); // Adjust speed by changing 100

      const updateCounter = () => {
        current += increment;
        if (current >= target) {
          counter.textContent = target;
        } else {
          counter.textContent = current;
          setTimeout(updateCounter, 20); // Adjust speed by changing 20
        }
      };

      updateCounter();
    };

    // Intersection Observer
    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting && !hasAnimated) {
        hasAnimated = true;
        counters.forEach((counter) => animateCounter(counter));
      }
    }, { threshold: 0.5 });

    const funFactsSection = document.querySelector("#fun-facts");
    observer.observe(funFactsSection);
  });


