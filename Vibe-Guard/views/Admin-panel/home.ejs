<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VibeGuard Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Include Animate.css for animations -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <!-- Include WOW.js for triggering animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>

    <style>
        body {
            background-color: #f0f4f8;
            color: #333;
        }
        .card {
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: linear-gradient(135deg, #023368, #004085);
            color: white;
            height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card h5, .card h2 {
            color: rgb(254, 254, 254);
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }
        .table-hover tbody tr:hover {
            background-color: #e0ebff;
        }
        .table-dark {
            background-color: #031e3b;
            color: rgb(244, 244, 244);
        }
        .table-dark th {
            border-color: gold;
        }
        .heading h1 {
            color: #004085;
            font-weight: bold;
            visibility: hidden; /* Initially hide the heading */
            /* opacity: 0; */
        }
        .text-muted {
            color: #666;
        }
        .btn-primary {
            background-color: #004085;
            border-color: #004085;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        /* Adding custom duration for the animations */
        .wow {
            animation-duration: 1.5s; 
            visibility: hidden /* make sure they are always visible */
        }
        .wow.animate__animated {
            visibility: visible !important; /* only becomes visible once animation runs */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Welcome Message -->
        <div class="text-center heading mb-4">
            <h1 class="wow animate__backInDown" data-wow-delay="0s" data-wow-duration="2s">
                Welcome to VibeGuard Admin Panel
            </h1>
            <p class="text-muted">Manage your healthcare system efficiently.</p>
        </div>
      
        <!-- Summary Cards with WOW.js Slide Animations -->
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow animate__slideInLeft" data-wow-delay="0s">
                <a href="/bodyparts/read" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Total Body Parts</h5>
                            <h2><%= totalBodyParts %></h2>
                            <i class="fas fa-user-md fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 animate__animated animate__zoomIn" data-wow-delay="0s">
                <a href="/symptoms/read" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Total Symptoms</h5>
                            <h2><%= totalSymptoms %></h2>
                            <i class="fas fa-heartbeat fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 animate__animated animate__slideInDown" data-wow-delay="0s">
                <a href="/symptomDetails/read" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Total Details of the Symptoms</h5>
                            <h2><%= totalSymptomDetails %></h2>
                            <i class="fas fa-notes-medical fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 animate__animated animate__zoomIn" data-wow-delay="0s">
                <a href="/doctor/read" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Doctors Detail</h5>
                            <h2><%= totalDoctors %></h2>
                            <i class="fas fa-stethoscope fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 animate__animated animate__slideInUp" data-wow-delay="0s">
                <a href="/medicine/read" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Medicines</h5>
                            <h2><%= totalMedicines %></h2>
                            <i class="fas fa-pills fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6 animate__animated animate__slideInRight" data-wow-delay="0s">
                <a href="/admin/users" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Total Users</h5>
                            <h2><%= totalUsers %></h2>
                            <i class="fas fa-user-friends fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>
            
            <div class="col-lg-4 col-md-6 animate__animated animate__slideInRight" data-wow-delay="0s">
                <a href="/feedback/all-feedbacks" class="text-decoration-none">
                    <div class="card shadow">
                        <div class="card-body text-center">
                            <h5>Feedbacks</h5>
                            <h2><%= totalfeedbacks %></h2>
                            <i class="fas fa-user-friends fa-3x"></i>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>

    <!-- Initialize WOW.js -->
    <script>
        new WOW({
            boxClass:     'wow',
            animateClass: 'animate__animated',
            offset:       0,
            mobile:       true,
            live:         true,
            callback: function(box) {
            // force visibility when WOW triggers animation
            box.style.visibility = 'visible';
            }
        }).init();
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
