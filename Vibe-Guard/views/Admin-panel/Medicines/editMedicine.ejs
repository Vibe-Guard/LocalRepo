<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Medicine</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7fc;
        }
        .form-container {
            background: #fff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15); /* More shadow */
        }
        .form-container h1 {
            font-size: 2rem;
            color: #004085;
            font-weight: bold;
            margin-bottom: 25px;
            text-align: center;
        }
        .btn-primary {
            background-color: #004085;
            border-color: #004085;
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
        }
        .btn-primary:hover {
            background-color: #003366;
            border-color: #003366;
        }
        .form-label {
            font-weight: 500;
            color: #333;
        }
        .form-control {
            border-radius: 8px;
            box-shadow: none;
            height: 45px;
            font-size: 1rem;
            border: 1px solid #ccc; /* Light border for inputs */
        }
        .form-control:focus {
            border-color: #004085; /* Highlight border on focus */
            box-shadow: 0 0 10px rgba(0, 64, 133, 0.2); /* Focus shadow */
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-container">
                    <h1>Edit Medicine</h1>
                    <form action="/medicine/edit/<%= medicine._id %>" method="POST">
                        <!-- Symptom Selection -->
                        <div class="mb-4">
                            <label for="symptomId" class="form-label">Symptom</label>
                            <select id="symptomId" name="symptomId" class="form-control" required>
                                <% symptoms.forEach(symptom => { %>
                                    <option value="<%= symptom._id %>" <%= medicine.symptomId._id.toString() === symptom._id.toString() ? 'selected' : '' %>>
                                        <%= symptom.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <!-- Medicine Name -->
                        <div class="mb-4">
                            <label for="name" class="form-label">Medicine Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= medicine.name %>" required>
                        </div>

                        <!-- Medicine Dose -->
                        <div class="mb-4">
                            <label for="dose" class="form-label">Medicine Dose</label>
                            <input type="text" id="dose" name="dose" class="form-control" value="<%= medicine.dose %>" required>
                        </div>

                        <!-- Medicine Description -->
                        <div class="mb-4">
                            <label for="description" class="form-label">Medicine Description</label>
                            <textarea id="description" name="description" class="form-control" placeholder="Description (optional)"><%= medicine.description %></textarea>
                        </div>

                        <!-- Update Button -->
                        <button type="submit" class="btn btn-primary">Update Medicine</button>

                        <!-- Cancel Link -->
                        <a href="/medicine/read" class="btn btn-secondary mt-3">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
