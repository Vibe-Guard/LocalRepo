<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medicines for Symptoms</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom Styles for Table and Buttons */
    .table th, .table td {
      vertical-align: middle;
      padding: 15px;
    }
    .btn-custom {
      padding: 10px;
      font-size: 1.5rem;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease;
      margin-right: 8px;
    }
    .btn-edit {
      background-color: #007bff;
      color: white;
    }
    .btn-edit:hover {
      background-color: #0056b3;
      transform: scale(1.1);
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .btn-delete:hover {
      background-color: #c82333;
      transform: scale(1.1);
    }
    .btn-add {
      padding: 10px;
      font-size: 1.5rem;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      background-color: #004085;
      color: white;
      transition: all 0.3s ease;
      margin-bottom: 20px;
    }
    .btn-add:hover {
      background-color: #14426f;
      color:white;
      transform: scale(1.1);
    }
    .table-responsive {
      margin-top: 30px;
    }
    .table-bordered {
      border: 1px solid #dee2e6;
    }
    .table-hover tbody tr:hover {
      background-color: #f8f9fa;
    }
    .table-dark th {
      background-color:#28666E;
      color: white;
    }
    .table-dark td {
      background-color: #f8f9fa;
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- Logout Button -->
    <a href="/medicine/add" class="btn btn-add mb-3">
      <i class="bi bi-plus"></i>
    </a>
    <h1 class="text-center mb-4">Medicines for Symptoms</h1>

    <% if (medicines.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead class="table-dark text-center">
            <tr>
              <th>Symptom</th>
              <th>Medicine Name</th>
              <th>Medicine Dose</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% medicines.forEach(medicine => { %>
              <tr>
                 <td><%= medicine.symptomId ? medicine.symptomId.name : 'N/A' %></td>

                <td><%= medicine.name %></td>
                <td><%= medicine.dose %></td>
                <td><%= medicine.description %></td>
                <td class="text-center">
                  <!-- Edit and Delete Buttons -->
                  <a href="/medicine/edit/<%= medicine._id %>" class="btn btn-edit btn-custom">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <!-- Inside your medicines table, change the delete anchor to: -->
                  <a href="#" 
                    class="btn btn-delete btn-custom delete-btn" 
                    data-id="<%= medicine._id %>" 
                    data-name="<%= medicine.name || 'this medicine' %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>

                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center">No medicines found.</p>
    <% } %>

    <nav aria-label="Page navigation">
  <ul class="pagination justify-content-center mt-4">

    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
      </li>
    <% } %>

    <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
      </li>
    <% } else { %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% } %>

  </ul>
</nav>

  </div>

  


  <div
  class="modal fade"
  id="confirmDeleteModal"
  tabindex="-1"
  aria-labelledby="confirmDeleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <form method="GET" id="deleteForm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete <strong id="modalMedicineName"></strong>?
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
    const modalMedicineName = document.getElementById('modalMedicineName');
    const deleteForm = document.getElementById('deleteForm');

    let medicineIdToDelete = null;

    deleteButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        medicineIdToDelete = button.getAttribute('data-id');
        const medicineName = button.getAttribute('data-name');
        modalMedicineName.textContent = medicineName;
        confirmModal.show();
      });
    });

    deleteForm.addEventListener('submit', (e) => {
      e.preventDefault();
      if (medicineIdToDelete) {
        // Redirect to the delete route on confirmation
        window.location.href = `/medicine/delete/${medicineIdToDelete}`;
      }
    });

    // Show alert if redirected after deletion
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('deleted') === 'true') {
      alert('Medicine deleted successfully!');
      history.replaceState(null, '', window.location.pathname);
    }
  });
</script>


  <!-- Bootstrap JS and Bootstrap Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
