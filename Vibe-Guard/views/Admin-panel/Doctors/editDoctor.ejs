<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Doctor</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f7fc;
    }
    .form-container {
      background: #fff;
      border-radius: 15px;
      padding: 40px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }
    .form-container h1 {
      font-size: 2rem;
      color: #004085;
      font-weight: bold;
      margin-bottom: 25px;
      text-align: center;
    }
    .btn-primary {
      background-color: #004085;
      border-color: #004085;
      width: 100%;
      padding: 12px;
      font-size: 1.1rem;
    }
    .btn-primary:hover {
      background-color: #003366;
      border-color: #003366;
    }
    .form-label {
      font-weight: 500;
      color: #333;
    }
    .form-control {
      border-radius: 8px;
      box-shadow: none;
      height: 45px;
      font-size: 1rem;
      border: 1px solid #ccc;
    }
    .form-control:focus {
      border-color: #004085;
      box-shadow: 0 0 10px rgba(0, 64, 133, 0.2);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="form-container">
          <form action="/doctor/update/<%= doctor._id %>" method="POST">
            <h1>Edit Doctor</h1>

            <!-- Name -->
            <div class="mb-4">
              <label for="name" class="form-label">Doctor Name</label>
              <input type="text" name="name" class="form-control" value="<%= doctor.name %>" required>
            </div>

            <!-- City -->
            <div class="mb-4">
              <label for="city" class="form-label">City</label>
              <input type="text" name="city" class="form-control" value="<%= doctor.city %>" required>
            </div>

            <!-- Specialization -->
            <div class="mb-4">
              <label for="specialization" class="form-label">Specialization</label>
              <input type="text" name="specialization" class="form-control" value="<%= doctor.specialization %>" required>
            </div>

            <!-- Qualification -->
            <div class="mb-4">
              <label for="qualification" class="form-label">Qualification</label>
              <input type="text" name="qualification" class="form-control" value="<%= doctor.qualification %>">
            </div>

            <!-- Experience -->
            <div class="mb-4">
              <label for="experience" class="form-label">Experience (Years)</label>
              <input type="number" name="experience" class="form-control" value="<%= doctor.experience %>">
            </div>

            <!-- Satisfaction Rate -->
            <div class="mb-4">
              <label for="satisfactionRate" class="form-label">Satisfaction Rate (%)</label>
              <input type="number" name="satisfactionRate" class="form-control" value="<%= doctor.satisfactionRate %>">
            </div>

            <!-- Average Time to Patients -->
            <div class="mb-4">
              <label for="avgTimeToPatients" class="form-label">Avg Time to Patients (minutes)</label>
              <input type="number" name="avgTimeToPatients" class="form-control" value="<%= doctor.avgTimeToPatients %>">
            </div>

            <!-- Wait Time -->
            <div class="mb-4">
              <label for="waitTime" class="form-label">Wait Time (minutes)</label>
              <input type="number" name="waitTime" class="form-control" value="<%= doctor.waitTime %>">
            </div>

            <!-- Hospital Address -->
            <div class="mb-4">
              <label for="hospitalAddress" class="form-label">Hospital Address</label>
              <input type="text" name="hospitalAddress" class="form-control" value="<%= doctor.hospitalAddress %>">
            </div>

            <!-- Fee -->
            <div class="mb-4">
              <label for="fee" class="form-label">Fee (PKR)</label>
              <input type="number" name="fee" class="form-control" value="<%= doctor.fee %>">
            </div>

            <!-- Contact -->
            <div class="mb-4">
              <label for="contact" class="form-label">Contact Number</label>
              <input type="text" name="contact" class="form-control" value="<%= doctor.contact %>">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary mt-3">Update Doctor</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
