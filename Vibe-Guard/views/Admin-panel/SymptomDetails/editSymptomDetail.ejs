<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Symptom Detail</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background-color: #f4f7fc;
    }
    .form-container {
      background: #fff;
      border-radius: 15px;
      padding: 40px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }
    .form-container h1 {
      font-size: 2rem;
      color: #004085;
      font-weight: bold;
      margin-bottom: 25px;
      text-align: center;
    }
    .btn-primary {
      background-color: #004085;
      border-color: #004085;
      width: 100%;
      padding: 12px;
      font-size: 1.1rem;
    }
    .btn-primary:hover {
      background-color: #003366;
      border-color: #003366;
    }
    .form-label {
      font-weight: 500;
      color: #333;
    }
    .form-control, .form-select {
      border-radius: 8px;
      height: 45px;
      font-size: 1rem;
      border: 1px solid #ccc;
    }
    .form-control:focus, .form-select:focus {
      border-color: #004085;
      box-shadow: 0 0 10px rgba(0, 64, 133, 0.2);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="form-container">
      <h1>Edit Symptom Detail</h1>
      <form action="/symptomDetails/update/<%= symptomDetail._id %>" method="POST" class="needs-validation" novalidate>
        
        <!-- Symptom Dropdown -->
        <div class="mb-3">
          <label for="symptom_id" class="form-label">Select Symptom:</label>
          <select id="symptom_id" name="symptom_id" class="form-select" required>
            <% symptoms.forEach(symptom => { %>
              <option value="<%= symptom._id %>" <%= symptom._id.equals(symptomDetail.symptom_id._id) ? 'selected' : '' %>>
                <%= symptom.name %>
              </option>
            <% }) %>
          </select>
          <div class="invalid-feedback">Please select a symptom.</div>
        </div>

        <!-- Overview -->
        <div class="mb-3">
          <label for="overview" class="form-label">Overview:</label>
          <textarea id="overview" name="overview" class="form-control" rows="3" required><%= symptomDetail.overview %></textarea>
        </div>

        <!-- Possible Causes -->
        <div class="mb-3">
          <label for="possibleCauses" class="form-label">Possible Causes:</label>
          <textarea id="possibleCauses" name="possibleCauses" class="form-control" rows="3" required><%= symptomDetail.possibleCauses %></textarea>
        </div>

        <!-- Precautions -->
        <div class="mb-3">
          <label for="precautions" class="form-label">Precautions:</label>
          <textarea id="precautions" name="precautions" class="form-control" rows="3" required><%= symptomDetail.precautions %></textarea>
        </div>

        <!-- Remedies -->
        <div class="mb-3">
          <label for="remedies" class="form-label">Remedies:</label>
          <textarea id="remedies" name="remedies" class="form-control" rows="3" required><%= symptomDetail.remedies %></textarea>
        </div>

        <!-- Fact -->
        <div class="mb-3">
          <label for="fact" class="form-label">Fact (Optional):</label>
          <textarea id="fact" name="fact" class="form-control" rows="3"><%= symptomDetail.fact %></textarea>
        </div>

        <!-- Lifestyle Tips -->
        <div class="mb-3">
          <label for="lifestyleTips" class="form-label">Lifestyle Tips:</label>
          <textarea id="lifestyleTips" name="lifestyleTips" class="form-control" rows="3" required><%= symptomDetail.lifestyleTips %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</body>
</html>