<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Symptom Details List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .table th, .table td {
      vertical-align: middle;
      padding: 12px;
    }
    .btn-custom {
      padding: 8px;
      font-size: 1.2rem;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease;
      margin-right: 6px;
    }
    .btn-edit {
      background-color: #007bff;
      color: white;
    }
    .btn-edit:hover {
      background-color: #0056b3;
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .btn-delete:hover {
      background-color: #c82333;
    }
    .btn-add {
      padding: 10px;
      font-size: 1.5rem;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      background-color: #004085;
      color: white;
      margin-bottom: 20px;
      transition: all 0.3s ease;
    }
    .btn-add:hover {
      background-color: #14426f;
      transform: scale(1.1);
    }
  </style>
</head>
<body>
  <div class="container mt-5">

    <!-- Add Button -->
    <a href="/symptomDetails/add" class="btn btn-add">
      <i class="bi bi-plus"></i>
    </a>

    <h1 class="text-center mb-4">Symptom Details List</h1>

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark text-center">
          <tr>
            <th>#</th>
            <th>Symptom</th>
            <th>Overview</th>
            <th>Causes</th>
            <th>Precautions</th>
            <th>Remedies</th>
            <th>Fact</th>
            <th>Lifestyle Tips</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (symptomDetails.length > 0) { %>
            <% symptomDetails.forEach((detail, index) => { %>
              <tr>
                <td><%= (currentPage - 1) * limit + index + 1 %></td>
                <td><%= detail.symptom_id?.name || "Unknown" %></td>
                <td><%= detail.overview %></td>
                <td><%= detail.possibleCauses %></td>
                <td><%= detail.precautions %></td>
                <td><%= detail.remedies %></td>
                <td><%= detail.fact || "â€”" %></td>
                <td><%= detail.lifestyleTips %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center">
                    <!-- Edit -->
                    <a href="/symptomDetails/edit/<%= detail._id %>" class="btn btn-edit btn-custom">
                      <i class="bi bi-pencil-fill"></i>
                    </a>
                    <!-- Delete -->
                    <a href="#"
                      class="btn btn-delete btn-custom delete-btn"
                      data-id="<%= detail._id %>"
                      data-name="<%= detail.symptom_id?.name || 'this detail' %>">
                      <i class="bi bi-trash-fill"></i>
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="9" class="text-center">No symptom details found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center mt-3">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Previous</span></li>
        <% } %>

        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Next</span></li>
        <% } %>
      </ul>
    </nav>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <form method="POST" id="deleteForm">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete <strong id="modalDetailName"></strong>?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const deleteButtons = document.querySelectorAll('.delete-btn');
      const confirmModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
      const modalDetailName = document.getElementById('modalDetailName');
      const deleteForm = document.getElementById('deleteForm');
      let detailIdToDelete = null;

      deleteButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          detailIdToDelete = button.getAttribute('data-id');
          const detailName = button.getAttribute('data-name');
          modalDetailName.textContent = detailName;
          confirmModal.show();
        });
      });

      deleteForm.addEventListener('submit', (e) => {
        e.preventDefault();
        if (detailIdToDelete) {
          window.location.href = `/symptomDetails/delete/${detailIdToDelete}`;
        }
      });
    });
  </script>
</body>
</html>
