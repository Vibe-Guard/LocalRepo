/* Form header */
.container h3 {
  text-align: center;
  margin-bottom: 25px;
  color: #ffffff;             /* Lighter blue for header */
  font-weight: 900;           /* Extra bold */
  font-size: 32px;            /* Larger font size */
}

/* Labels */
.form-label {
  display: block;
  margin-bottom: 8px;
  font-weight: 700;           /* Bold */
  color: #cbd6e7;             /* Light bluish-gray */
  font-size: 16px;            /* Slightly larger */
}

/* Inputs & selects */
.form-control {
  width: 100%;
  padding: 10px 14px;
  font-size: 16px;
  border: 1.8px solid #5a7ba6; /* lighter border */
  border-radius: 6px;
  background-color: #0e2a57;    /* Dark input background */
  color: #e1eaff;              /* Light text in inputs */
  transition: border-color 0.3s ease;
  box-sizing: border-box;
  outline: none;
}

.form-control::placeholder {
  color: #a3b1cc;              /* Placeholder color */
}

.form-control:focus {
  border-color: #3399ff;
  box-shadow: 0 0 5px #3399ff88;
  background-color: #143f82;
  color: #fff;
}

/* File input tweak */
input[type="file"].form-control {
  padding: 6px 12px;
}

/* Margin bottom spacing for inputs */
.mb-2 {
  margin-bottom: 16px;
}

/* Button styling */
.btn-primary {
  width: 100%;
  background-color: #ffffff;
  border: none;
  padding: 14px 0;
  font-size: 18px;
  font-weight: 800;
  border-radius: 8px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  color: #0e2a57;
