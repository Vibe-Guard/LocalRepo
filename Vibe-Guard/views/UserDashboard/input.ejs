.container {
  width: 600px;         /* Fixed width */
  margin: 40px auto;    /* Center horizontally with top margin */
  padding: 20px 30px;
  background-color: #041D35;
  border-radius: 10px;
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
  text-align: left;
