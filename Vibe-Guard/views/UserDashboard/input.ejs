    <div class="container">
        <h3>User Info</h3>
        <form id="userInfoForm" enctype="multipart/form-data">
            <div class="mb-2">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-2">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            <div class="mb-2">
                <label for="age" class="form-label">Age</label>
                <input type="number" class="form-control" id="age" name="age" required min="16">
            </div>
            <div class="mb-2">
                <label for="gender" class="form-label">Gender</label>
                <select class="form-control" id="gender" name="gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Profile Image</label>
                <input type="file" class="form-control" id="image" name="image">
            </div>
            <button type="submit" class="btn text: #0e2a57; btn-primary">Save Info</button>
        </form>
    </div>
    <script>
        $(document).ready(function () {
            const userId = "<%= userId %>";
            console.log("Logged-in user ID:", userId);

            // Fetch user data to populate the form
            $.get(`/tracking/api/getUserData/${userId}`, function (userInfo) {
                if (userInfo) {
                    $('#firstName').val(userInfo.firstName || '');
                    $('#lastName').val(userInfo.lastName || '');
                    $('#age').val(userInfo.age || '');
                    $('#gender').val(userInfo.gender || 'Male');
                  }
            });

            // Handle form submission
            $('#userInfoForm').submit(function (e) {
    e.preventDefault();

    const age = parseInt($('#age').val());
    if (isNaN(age) || age < 16) {
        alert("Age must be greater than 15.");
        return;
    }

    const formData = new FormData(this);

    $.ajax({
        url: '/tracking/api/saveUserData',
        type: 'POST',
        data: formData,
        contentType: false,
        processData: false,
        success: function (response) {
            alert(response.message || 'User info saved successfully.');
            setTimeout(function () {
                window.location.href = '/tracking/dashboard';
            }, 500);
        },
        error: function (jqXHR) {
            console.error('Error saving user info:', jqXHR.responseJSON || jqXHR.responseText);
            alert(jqXHR.responseJSON?.message || 'Error saving user info.');
        }
    });
});

        });
    </script>
