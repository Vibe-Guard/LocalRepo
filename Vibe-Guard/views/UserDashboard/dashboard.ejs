    }

    /* breakpoints & sidebar/content */
    @media (max-width: 320px) {
      #mobile-menu-btn { display:block; }
      .outer-img-div { margin-left: 28px; width:120px; height:120px; }
      #userImage { width:100px; height:100px; }
